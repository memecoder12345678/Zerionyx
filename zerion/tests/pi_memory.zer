load "libs.string"
load "libs.list"
load "libs.sys"
load "libs.time"

pi_digits_lvl_nm = split("", "")
pi_digits_lvl_nm_ = split("1415926535", "")

defun pi_game()
    clear()
    println("Welcome to Pi Memory Game!")
    println("I will give you some digits of Pi, and you have to remember them.")
    println("You can choose between noob and nightmare mode.")
    println("In noob mode, I will give you 10 digits of Pi.")
    println("In nightmare mode, I will give you all the digits of Pi I have (1000).")
    println("You can choose the difficulty level by typing 'no' for noob or 'ni' for nightmare.")
    mode = input("Choose difficulty level ([no]ob/[ni]ghtmare): ")
    while mode != "no" and mode != "ni" do
        println("Invalid mode! Choose 'no' or 'ni'.")
        mode = input("Choose difficulty level ([no]ob/[ni]ghtmare): ")
    done
    if mode == "no" do
        pi_digits = pi_digits_lvl_nm_
        mode = "noob"
    else
        pi_digits = pi_digits_lvl_nm
        mode = "nightmare"
    done
    println("You chose " + mode + " mode.")
    println("")
    println("Here are the digits of Pi I will give you: 3." + join("", pi_digits))
    println("You will have " + to_str(len(pi_digits)) + " digits to remember.")
    println("I will give you the digits one by one, and you have to enter them after the decimal point.")
    println("If you make a mistake, I will tell you the correct digit and how many you remembered.")
    println("Good luck!")
    println("")
    sleep(30)
    clear()
    println("Ready? Let's go!")
    println("Start with: 3.")

    for i = 0 to len(pi_digits) do
        expected = pi_digits > i
        user_input = input("Enter digit #" + to_str(i + 1) + ": ")

        if user_input != expected do
            println("Wrong! Correct was: " + expected)
            println("You remembered " + to_str(i) + " digits after the decimal.")
            return none
        done
        println("Correct!")
    done
    println("You're a Pi god. You remembered ALL digits I gave you!")
done

if is_main do
    pi_game()
    exit(0)
done
