# libs.threading

namespace threading
    defun start(f, args=[])
        return thread_start_fp(f, args)
    done

    defun sleep(s)
        thread_sleep_fp(s)
        return none
    done

    defun join(h, timeout=15)
        thread_join(h, timeout)
        return none
    done

    defun is_alive(t)
        return thread_is_alive_fp(t)
    done

    defun cancel(t)
        thread_cancel_fp(t)
        return none
    done
done