# libs.file

os_sep = os_sep_fp

defun write(f, m, t)
    if m != "w" and m != "a" do
        panic("Invalid mode for write operation", "IO")
    done
    if type(f) != str do
        panic("First argument of 'write' must be a string", "T")
    done
    f_ = open_fp(f)
    write_fp(f_, m, t)
done

defun read(f)
    if not exists_fp(f) do
        panic("File does not exist", "IO")
    done
    if type(f) != str do
        panic("First argument of 'read' must be a string", "T")
    done
    f_ = open_fp(f)
    return read_fp(f_)
done

